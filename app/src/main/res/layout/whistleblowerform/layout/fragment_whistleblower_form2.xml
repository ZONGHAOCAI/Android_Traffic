<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".whistleblowerform.WhistleblowerForm2Fragment">

    <data>

        <variable
            name="viewModel"
            type="com.example.android_traffic.whistleblowerform.WhistleblowerForm2ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextWhistleblower2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="96dp"
            android:background="@color/pink_style"
            android:text="@string/txtSend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtViolationFactDetailsWhistleblower" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPreviousWhistleblower2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="56dp"
            android:background="@color/pink_style"
            android:text="@string/txtPrevious"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtViolationFactDetailsWhistleblower" />

        <TextView
            android:id="@+id/tvUploadDocWhistleblower2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="72dp"
            android:text="@string/txtWhistleblowerContent"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvViolationTimeWhistleblower2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/txtViolationTime"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationTime}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />

        <TextView
            android:id="@+id/edtTxtViolationCarWhistleblower"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="76dp"
            android:ems="10"
            android:hint="@string/txtViolationCar"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationCar}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />

        <TextView
            android:id="@+id/edtTxtViolationLocationWhistleblower"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:hint="@string/txtViolationLocation"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationLocation}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />

        <TextView
            android:id="@+id/edtTxtIntersectionWhistleblower"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="196dp"
            android:ems="10"
            android:hint="@string/txtIntersection"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationIntersection}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />

        <TextView
            android:id="@+id/edtTxtLocationNoteWhistleblower"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="256dp"
            android:ems="10"
            android:hint="@string/txtLocationNote"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationLocationNote}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />

        <TextView
            android:id="@+id/edtTxtViolationFactWhistleblower"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="316dp"
            android:ems="10"
            android:hint="@string/ViolationFact"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationFact}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />

        <TextView
            android:id="@+id/edtTxtViolationFactDetailsWhistleblower"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="368dp"
            android:ems="10"
            android:hint="@string/ViolationFactDetails"
            android:inputType="textPersonName"
            android:text="@={viewModel.whistleblower.violationFactDetails}"
            app:layout_constraintEnd_toEndOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintStart_toStartOf="@+id/tvUploadDocWhistleblower2"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadDocWhistleblower2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>