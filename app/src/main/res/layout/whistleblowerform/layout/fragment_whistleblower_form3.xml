<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".whistleblowerform.controller.WhistleblowerForm3Fragment">

    <data>

        <variable
            name="viewModel"
            type="com.example.android_traffic.whistleblowerform.viewModel.WhistleblowerForm3ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSendComplete"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="72dp"
            android:text="@string/txtSendComplete"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCaseNumber"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginTop="150dp"
            android:text="@string/txtCaseNumberConfirm"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tvSendComplete"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/tvSendComplete"
            app:layout_constraintTop_toBottomOf="@+id/tvSendComplete" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="284dp"
            android:background="@color/pink_style"
            android:text="@string/txtNextCase"
            app:layout_constraintEnd_toEndOf="@+id/tvSendComplete"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tvSendComplete"
            app:layout_constraintTop_toBottomOf="@+id/tvSendComplete" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWhistleblower3BacktoMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/pink_style"
            android:text="@string/txtBackToMainPage"
            app:layout_constraintEnd_toEndOf="@+id/tvSendComplete"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tvSendComplete"
            app:layout_constraintTop_toBottomOf="@+id/btnNextCase" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="270dp"
            android:layout_height="73dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/tvSendComplete"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/tvSendComplete"
            app:layout_constraintTop_toBottomOf="@+id/tvSendComplete"
            app:srcCompat="@drawable/whistleblower_step3"
            tools:src="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>