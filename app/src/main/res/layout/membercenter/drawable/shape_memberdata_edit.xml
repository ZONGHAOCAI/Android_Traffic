<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"><!--指定形狀類型，默認為rectangle-->

    <!--指定形狀的填充色-->
    <solid android:color="#FFFFFF" />

    <!--設定內容區域離邊界的間距-->
    <padding
        android:bottom="12dp"
        android:left="20dp"
        android:right="12dp"
        android:top="12dp" />

    <!--設定圓角，只適用於 rectangle-->
    <corners android:radius="10dp" />


    <!--設定描邊-->
    <stroke
        android:width="1dp"
        android:color="#000000"
        android:dashWidth="4dp" />
</shape>