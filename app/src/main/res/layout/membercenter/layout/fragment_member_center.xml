<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".membercenter.controller.MemberCenterFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.android_traffic.membercenter.viewmodel.MemberCenterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


        <TextView
            android:id="@+id/tv_MeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/membercenter_txt_background"
            android:text="@string/txt_MemberCenter_MeInfo"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_RelatedPersonInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/membercenter_txt_background"
            android:text="@string/txt_MemberCenter_RelatedPersonInfo"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_MeInfo"
            app:layout_constraintStart_toStartOf="@+id/tv_MeInfo"
            app:layout_constraintTop_toBottomOf="@+id/tv_MeInfo" />

        <TextView
            android:id="@+id/tv_Update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/membercenter_txt_background"
            android:text="@string/txt_MemberCenter_Update2"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/cl_Language"
            app:layout_constraintStart_toStartOf="@+id/cl_Language"
            app:layout_constraintTop_toBottomOf="@+id/cl_Language" />

        <TextView
            android:id="@+id/tv_Creditcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/membercenter_txt_background"
            android:text="@string/txt_MemberCenter_CreditCard"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_Update"
            app:layout_constraintStart_toStartOf="@+id/tv_Update"
            app:layout_constraintTop_toBottomOf="@+id/tv_Update" />

        <TextView
            android:id="@+id/tv_Logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/membercenter_txt_background"
            android:text="@string/txt_MemberCenter_Logout2"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_Creditcard"
            app:layout_constraintStart_toStartOf="@+id/tv_Creditcard"
            app:layout_constraintTop_toBottomOf="@+id/tv_Creditcard" />

        <TextView
            android:id="@+id/tv_DeleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="28dp"
            android:text="@string/txt_MemberCenter_DeleteAccount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_Language"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/membercenter_txt_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_RelatedPersonInfo">

            <TextView
                android:id="@+id/tv_Language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_MemberCenter_ChangeLanguage"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="@string/txt_MemberCenter_Language"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>