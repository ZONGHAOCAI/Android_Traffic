<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ForgetPasswordFragment" >

    <EditText
        android:id="@+id/edtTxtForgetUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="@string/txt_Login_Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tvForegetPassword"
        app:layout_constraintStart_toStartOf="@+id/tvForegetPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTxtForgetPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="@string/txt_Login_Phone"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtForgetUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtForgetUsername"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtForgetUsername" />

    <EditText
        android:id="@+id/edtTxtForgetConfirmNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:hint="@string/txt_Login_ConfirmCode"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtForgetPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtForgetPhone"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtForgetPhone" />

    <Button
        android:id="@+id/btnSendPhoneMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txt_Login_Confirm"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtForgetConfirmNumber"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtForgetConfirmNumber"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtForgetConfirmNumber" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/txt_Login_Next"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtForgetConfirmNumber"
        app:layout_constraintStart_toStartOf="@+id/edtTxtForgetConfirmNumber"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtForgetConfirmNumber" />

    <Button
        android:id="@+id/btnSendConfirmCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/txt_Login_SendPhoneMsg"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtForgetPhone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtForgetPhone"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtForgetPhone" />

    <TextView
        android:id="@+id/tvForegetPassword"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="72dp"
        android:text="@string/txt_Login_ForgetPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>