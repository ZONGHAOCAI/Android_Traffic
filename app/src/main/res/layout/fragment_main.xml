<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.example.android_traffic.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imgBtn_Main_AppealHistory"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:drawableTop="@drawable/icon_appealhistory"
            android:paddingTop="10dp"
            android:text="檢舉列表"
            android:textColor="@color/black"
            app:backgroundTint="#F8D1D5"
            app:cornerRadius="20dp"
            app:iconPadding="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBtn_Main_Photo"
            app:layout_constraintStart_toStartOf="@+id/imgBtn_Main_Ticket" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imgBtn_Main_Ticket"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:drawableTop="@drawable/icon_ticket"
            android:paddingTop="10dp"
            android:text="罰單列表"
            android:textColor="@color/black"
            app:backgroundTint="#F8D1D5"
            app:cornerRadius="20dp"
            app:iconPadding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBtn_Main_Appeal"
            app:layout_constraintTop_toTopOf="@+id/imgBtn_Main_Appeal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imgBtn_Main_Forum"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:drawableTop="@drawable/icon_forum"
            android:paddingTop="10dp"
            android:text="論壇"
            android:textColor="@color/black"
            app:backgroundTint="#F8D1D5"
            app:cornerRadius="20dp"
            app:iconPadding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imgBtn_Main_Photo"
            app:layout_constraintTop_toBottomOf="@+id/imgBtn_Main_Photo"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imgBtn_Main_Chat"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:drawableTop="@drawable/icon_chat"
            android:paddingTop="10dp"
            android:text="聊天"
            android:textColor="@color/black"
            app:backgroundTint="#F8D1D5"
            app:cornerRadius="20dp"
            app:iconPadding="4dp"
            app:layout_constraintStart_toStartOf="@+id/imgBtn_Main_AppealHistory"
            app:layout_constraintTop_toTopOf="@+id/imgBtn_Main_Forum" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imgBtn_Main_Photo"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:drawableTop="@drawable/icon_photo"
            android:paddingTop="10dp"
            android:text="攝影檢舉"
            android:textColor="@color/black"
            app:backgroundTint="#F8D1D5"
            app:cornerRadius="20dp"
            app:iconPadding="4dp"
            app:layout_constraintBottom_toTopOf="@+id/imgBtn_Main_Forum"
            app:layout_constraintStart_toStartOf="@+id/imgBtn_Main_Appeal"
            app:layout_constraintTop_toBottomOf="@+id/imgBtn_Main_Appeal"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imgBtn_Main_Appeal"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:drawableTop="@drawable/icon_appeal"
            android:paddingTop="10dp"
            android:text="檢舉表單"
            android:textColor="@color/black"
            app:backgroundTint="#F8D1D5"
            app:cornerRadius="20dp"
            app:iconPadding="4dp"
            app:layout_constraintBottom_toTopOf="@+id/imgBtn_Main_Photo"
            app:layout_constraintEnd_toStartOf="@+id/imgBtn_Main_Ticket"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>